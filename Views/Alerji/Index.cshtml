@model AlerjiViewModel

@{
    ViewData["Title"] = "Alerji";
}

<div class="container mt-5">
    <div class="form-container">
        <div class="form-header">
            <h4>Alerji - Hasta No: @Model.HastaNo</h4>
        </div>
        <form method="post" asp-controller="Alerji" asp-action="Kaydet">
            <div class="form-group">
                <label for="alerjiVarMi">Alerjisi var mı?</label>
                <div class="btn-group" id="alerjiVarMi">
                    <button type="button" class="alerji-btn" data-type="Var">Var</button>
                    <button type="button" class="alerji-btn" data-type="Yok">Yok</button>
                </div>
            </div>
            <div class="form-group">
                <label for="alerjiTurBtnGroup">Alerji Türü</label>
                <div class="btn-group" id="alerjiTurBtnGroup">
                    @foreach (var alerji in Model.Alerji_Adi)
                    {
                        <button type="button" class="alerji-btn">@alerji</button>
                    }
                </div>
                <input type="hidden" id="AlerjiAdi" asp-for="Alerji_Adi" value="0">
            </div>
            <div class="form-group">
                <label for="ilac-aciklama">Alerji Notu</label>
                <textarea class="form-control custom-input scrollable-box" id="alerji-aciklama" asp-for="AlerjiNotu" rows="2" maxlength="3000"></textarea>
                <div class="char-counter" id="char-count">0 / 3000</div>
            </div>
            <div class="form-group button-group">
                <div class="guncelleyen">
                    <span>Son Güncelleyen: Hamdi</span>
                    <span>@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
                <button type="button" class="btn btn-secondary">Vazgeç</button>
                <button type="submit" class="btn btn-primary" id="kaydetBtn">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/alerji.js"></script>
}